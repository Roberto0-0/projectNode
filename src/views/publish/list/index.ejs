<!DOCTYPE html>
<html lang="en">

<head>
  <title></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/publish/list/style.css">
</head>

<body>
  <header>
    <div class="container">
      <h2>Publications</h2>
      <div class="menu-box">
        <div class="menu-container">
          <div class="line-one"></div>
          <div class="line-two"></div>
          <div class="line-three"></div>
        </div>
        <nav>
          <ul>
            <li>
              <a href="/posts/<%= USER.id %>">posts</a>
            </li>
          </ul>
        </nav>
      </div>

    </div>
  </header>
  <main>
    <div class="main-container">
      <ul>
        <% publication.forEach(p=> { %>
          <% if(p.userId==USER.id) { %>
            <li>
              <div class="profile">
                <div class="image">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                    <path fill="none" d="M0 0h24v24H0z" />
                    <path
                      d="M4 22a8 8 0 1 1 16 0h-2a6 6 0 1 0-12 0H4zm8-9c-3.315 0-6-2.685-6-6s2.685-6 6-6 6 2.685 6 6-2.685 6-6 6zm0-2c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4z" />
                  </svg>
                </div>
                <h2>
                  <%= p.userName %>
                </h2>
                <!-- <span><strong>Data: <%= p.publishAt %></strong></span> -->
              </div>
              <h3>
                <%= p.title %>
              </h3>
              <div class="campText">
                <p>
                  <%= p.comment %>
                </p>
              </div>
              <div class="options">
                <div class="options-container">
                  <a href="/publication/edit/<%= USER.id %>/publish/<%= p.id %>"><button type=""
                      id="btn-edit">edit</button></a>
                  <a href="/publication/delete/<%= USER.id %>/publish/<%= p.id %>"><button type=""
                      id="btn-delete">delete</button></a>
                </div>

            </li>
            <% } else { %>
              <li>
                <div class="profile">
                  <div class="image">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                      <path fill="none" d="M0 0h24v24H0z" />
                      <path
                        d="M4 22a8 8 0 1 1 16 0h-2a6 6 0 1 0-12 0H4zm8-9c-3.315 0-6-2.685-6-6s2.685-6 6-6 6 2.685 6 6-2.685 6-6 6zm0-2c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4z" />
                    </svg>
                  </div>
                  <h2>
                    <%= p.userName %>
                  </h2>
                  <!-- <span><strong>Data: <%= p.publishAt %></strong></span> -->
                </div>
                <h3>
                  <%= p.title %>
                </h3>
                <div class="campText">
                  <p>
                    <%= p.comment %>
                  </p>
              </li>

              <% } %>
                <% }) %>
      </ul>
    </div>
  </main>
  <script src="/js/menu/main.js"></script>
</body>

</html>
