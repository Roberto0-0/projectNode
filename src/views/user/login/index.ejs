  <div class="container">
    <h1>Login</h1>
    <form action="/auth/login/authentication" method="POST">
        <div class="input">
            <i class="ph-envelope"></i>
            <input type="email" name="email" placeholder="E-mail" required> 
        </div>
        <div class="input">
            <i class="ph-lock-simple"></i>
            <input type="password" name="password" class="password" placeholder="Password" required>
            <img src="/svg/password/eye.svg" class="see-password" width="20px" height="20px" alt="">
        </div>
        <button type="submit">sign in</button>
    </form>

    <div class="others">
        <p>
            don't have an account? <a href="/auth/register">click here!</a>
        </p>
    </div>
  </div>
  <% if(message_success.length> 0) { %>
    <div class="message_success">
      <h2>
        <%= message_success %>
      </h2>
    </div>
    <% } %>
      <% if(message_error.length>0) { %>
        <div class="message_error">
          <h2>
            <%= message_error %>
          </h2>
        </div>
        <% } %>

  <script src="/js/seePassword/main.js"></script>
